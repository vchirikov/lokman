@page "/"
@page "/index.html"
@page "/{Page:int}"
@namespace Lokman.Client.Pages
@inject NavigationManager _navManager

<div class="container mx-auto py-2">
    Hello from the root component
</div>

@code{
    [Parameter]
    public int Page { get; set; }

    public void OnPageChanged(int value)
    {
        Page = value;
        _navManager.NavigateTo("/" + Page);
    }
}
